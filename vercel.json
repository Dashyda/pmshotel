{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/manifest.json", "dest": "/manifest.json" },
    { "src": "/api/(.*)", "dest": "https://pmshotel-production.up.railway.app/api/$1" },
    { "src": "/socket.io/(.*)", "dest": "https://pmshotel-production.up.railway.app/socket.io/$1" },
    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}

